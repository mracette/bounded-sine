{
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "noEmit": false,
        "declaration": true,
        "target": "ES5",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    }
}